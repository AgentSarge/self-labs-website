---
import BaseHead from "@/components/BaseHead.astro";
import Navigation from "@/components/global/Navigation.astro";
import Footer from "@/components/global/Footer.astro";
import ContactForm from "@/components/global/ContactForm.astro";

export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
  noindex?: boolean;
  structuredData?: object;
}

const seoProps = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="selection:bg-orange selection:text-white">
  <head>
    <BaseHead {...seoProps} />
  </head>
  <body
    class="mx-auto bg-black max-w-7xl border-x border-white/20 2xl:max-w-7xl"
  >
    <Navigation />
    <slot />
    <Footer />
    <ContactForm />
  </body>
</html>
