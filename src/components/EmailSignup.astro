---
// This component uses Netlify Forms for email collection
---

<div class="bg-orange-500/10 border border-orange-500/20 p-8 rounded-lg mb-12">
  <div class="text-center">
    <h3 class="text-2xl font-bold text-white mb-4">Get SEO Tips Delivered to Your Inbox</h3>
    <p class="text-gray-300 mb-6 max-w-2xl mx-auto">
      Join 500+ business owners who get weekly SEO tips, case studies, and exclusive insights that actually work. No spam, just results.
    </p>
    
    <form 
      name="blog-newsletter" 
      method="POST" 
      data-netlify="true" 
      data-netlify-honeypot="bot-field"
      class="max-w-md mx-auto"
    >
      <!-- Honeypot field for spam protection -->
      <input type="hidden" name="form-name" value="blog-newsletter" />
      <div style="display: none;">
        <label>Don't fill this out if you're human: <input name="bot-field" /></label>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4">
        <input 
          type="email" 
          name="email" 
          placeholder="Enter your email address"
          required
          class="flex-1 px-4 py-3 rounded-lg border border-white/20 bg-white/5 text-white placeholder-gray-400 focus:outline-none focus:border-orange-500"
        />
        <button 
          type="submit"
          class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors"
        >
          Subscribe Free
        </button>
      </div>
      
      <p class="text-xs text-gray-400 mt-3">
        We respect your privacy. Unsubscribe at any time.
      </p>
    </form>
  </div>
</div>

<!-- Success message (hidden by default) -->
<div id="signup-success" class="hidden bg-green-500/10 border border-green-500/20 p-4 rounded-lg mb-8">
  <div class="flex items-center space-x-3">
    <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
    </svg>
    <div>
      <h4 class="text-green-400 font-semibold">Thanks for subscribing!</h4>
      <p class="text-gray-300 text-sm">Check your email for a confirmation link.</p>
    </div>
  </div>
</div>

<script>
  // Handle form submission
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form[name="blog-newsletter"]');
    if (form) {
      form.addEventListener('submit', function(e) {
        // Show success message
        const successDiv = document.getElementById('signup-success');
        if (successDiv) {
          successDiv.classList.remove('hidden');
          form.style.display = 'none';
        }
      });
    }
  });
</script>
