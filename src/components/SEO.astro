---
export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
  noindex?: boolean;
  structuredData?: object;
}

const {
  title = "Self Labs - Professional Website Design & Development",
  description = "Professional website design and development. One-time builds starting at $300 or monthly maintenance packages from $50/month. Fast, affordable, and reliable.",
  canonical = Astro.url.pathname,
  ogImage = "/og-image.jpg",
  ogType = "website",
  noindex = false,
  structuredData,
} = Astro.props;

const siteUrl = "https://self-labs.io";
const fullCanonicalUrl = new URL(canonical, siteUrl).href;
const fullImageUrl = new URL(ogImage, siteUrl).href;

// Default structured data for organization
const defaultStructuredData = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Self Labs",
  "description": description,
  "url": siteUrl,
  "logo": `${siteUrl}/favicons/apple-touch-icon.png`,
  "image": fullImageUrl,
  "telephone": "(943) 234-9570",
  "email": "support@self-labs.io",
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "US"
  },
  "priceRange": "$300-$2500+",
  "sameAs": []
};

const finalStructuredData = structuredData || defaultStructuredData;
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
{noindex && <meta name="robots" content="noindex,nofollow" />}
<link rel="canonical" href={fullCanonicalUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={fullCanonicalUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:site_name" content="Self Labs" />
<meta property="og:locale" content="en_US" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={fullCanonicalUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImageUrl} />

<!-- Structured Data (JSON-LD) -->
<script type="application/ld+json" set:html={JSON.stringify(finalStructuredData)} />

