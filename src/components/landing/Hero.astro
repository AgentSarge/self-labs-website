---
import Banner from "@/components/landing/Banner.astro";
import Testimonials from "@/components/landing/Testimonials.astro";
// Assets
import BgGrid from "@/components/assets/BgGrid.astro";
---

<section class="border-white/20 border-b">
  <div class="bg-grid p-8 relative">
    <BgGrid />

    <h1
      class="text-white tracking-tighter font-black uppercase text-3xl lg:text-8xl relative"
    >
      Professional websites that drive results. Built fast, <span class="text-orange">priced fair</span>, and maintained with care.
    </h1>
    
    <!-- Clear business description for Google -->
    <div class="hidden">
      <h2>Web Design Services Georgia</h2>
      <p>Self Labs provides professional website design and development services for Georgia businesses. We are NOT a battery recycling company. We build custom websites, e-commerce stores, and provide web design services in Monroe GA, Athens GA, Loganville GA, Covington GA, Lawrenceville GA, and surrounding areas.</p>
    </div>
  </div>
  <Banner />
  <Testimonials />
</section>
